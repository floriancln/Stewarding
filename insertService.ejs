<!DOCTYPE html>
<html>

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
	<title>insertService.ejs</title>
	<!-- Bootstrap -->
	<link rel="stylesheet" href="css/bootstrap/dist/css/bootstrap.min.css">

	<!-- My CSS -->
	<link rel="stylesheet" href="css/style.css" />
</head>

<nav>
	<%- include("partials/navBar.ejs"); -%>
</nav>

<div class="mb-3">
	<a class="btn btn-primary" type="button" href="services">
		<img src="css/bootstrap/bootstrap-icons/icons/arrow-left-circle-fill.svg" width="30" height="30"
			fill="%ffd700" alt="back-to-products">
	</a>
</div>

<body class="container-fluid">
	<h1 class="mb-6 row justify-content-center">Ajouter un service</h1>
	<div class="row justify-content-center">
		<div class="col-md-3">
			<form method="post" action="/insertServiceValidation" id="addServiceForm">
				<div class="mb-3">
					<label class="row justify-content-center">Nom du service</label>
					<input type="text" class="form-control" name="name_service" id="name_service"
						value="" />
				</div>

				<div class="mb-3">
					<label class="row justify-content-center">Utilisateur</label>
					<select class="form-control" type="text" name="id_user" value="">
						<option>Affilier un utilisateur</option>
						<% user.forEach(function(users){%>
							<option value="<%= users.id_user %>">
								<%= users.name_user %>
							</option>
							<% }); %>
					</select>
				</div>

				<div class="row justify-content-center">
					<input type="submit" class="btn btn-primary " value="Valider" id="btValider" />
				</div>
			</form>
			<p>
				<%=message %>
			</p>
		</div>
	</div>
	<footer>
		<%- include ("partials/footerBackOffice.ejs"); -%>
	</footer>
</body>

</html>